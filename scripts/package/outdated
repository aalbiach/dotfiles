#!/usr/bin/env bash

set -euo pipefail

source "$DOTLY_PATH/scripts/core/_main.sh"

##? Print all outdated packages
#?? 1.0.0
##?
##? Usage:
##?    outdated

docs::parse "$@"

echo 'ğŸ Outdated App Store apps:'
mas outdated

echo ''
echo 'ğŸº Outdated brew apps:'
brew update >/dev/null
brew outdated

echo ''
echo 'ğŸ» Outdated brew cask apps:'
brew outdated --cask
